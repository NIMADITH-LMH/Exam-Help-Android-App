<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="24dp"
    android:paddingTop="8dp"
    android:paddingEnd="24dp"
    android:paddingBottom="8dp">

    <TextView
        android:id="@+id/tvLessonTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Lesson 1: Structure and Function"
        android:textColor="@color/text_primary"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/tvLessonDuration"
        app:layout_constraintEnd_toStartOf="@+id/ivCompletionStatus"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
        
    <TextView
        android:id="@+id/tvLessonDuration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10 min"
        android:textColor="@color/text_secondary"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/tvLessonTitle"
        app:layout_constraintTop_toBottomOf="@+id/tvLessonTitle"
        app:layout_constraintBottom_toBottomOf="parent" />
        
    <ImageView
        android:id="@+id/ivCompletionStatus"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:src="@drawable/ic_not_completed"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnLessonAccess"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="8dp" />

    <TextView
        android:id="@+id/btnLessonAccess"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/circle_primary_blue"
        android:gravity="center"
        android:text="1"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
